<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Background="Green"
             x:Class="MyeaMobileApp.View.Main.MainPage">

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

        <HorizontalStackLayout HorizontalOptions="End">
            <ImageButton Source="user_icon.png" HeightRequest="30" HorizontalOptions="End" Command="{Binding NavigateToUsersAccountCommand}"/>
        </HorizontalStackLayout>
        

            <Button
                Text="Login"
                Command="{Binding NavigateToLoginPageCommand}"/>                  
            
            <Button
                Text="Register"
                Command="{Binding NavigateToRegisterPageCommand}"/>            
            
            <Button
                Text="News"
                Command="{Binding NavigateToNewReelPageCommand}"/>           
            
            <Button
                Text="Lottery"
                Command="{Binding NavigateToLotteryPageCommand}"/>
            
        </VerticalStackLayout>

</ContentPage>
