<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Background="Green"
             x:Class="MyeaMobileApp.View.Main.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Image
                Source="myea_logo_svg.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Logo" />

            <Button
                Text="Login"
                Command="{Binding NavigateToLoginPageCommand}"/>                  
            
            <Button
                Text="Register"
                Command="{Binding NavigateToRegisterPageCommand}"/>            
            
            <Button
                Text="News"
                Command="{Binding NavigateToNewReelPageCommand}"/>           
            
            <Button
                Text="Lottery"
                Command="{Binding NavigateToLotteryPageCommand}"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
