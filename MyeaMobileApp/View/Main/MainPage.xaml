<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Background="White"
             x:Class="MyeaMobileApp.View.Main.MainPage">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="EntryStyle" TargetType="Entry">
                <Setter Property="Margin" Value="0,10,0,0"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="BackgroundColor" Value="#EEEEEE"/>
                <Setter Property="TextColor" Value="DarkBlue"/>
                <Setter Property="HeightRequest" Value="50"/>
            </Style>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4CAF50"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="5"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout
        Padding="5">
        
        <HorizontalStackLayout HorizontalOptions="End">
            
            <ImageButton 
                Source="user_icon.png" 
                HeightRequest="50"
                WidthRequest="50"
                Command="{Binding NavigateToUsersAccountCommand}"/>

        </HorizontalStackLayout>

        <VerticalStackLayout 
            HorizontalOptions="Center" 
            Spacing="10">
            
            <Label
                Text="Welcome to Myecoapp!"
                />
            
            <Image
                Source="logo_png.png"
                HeightRequest="128"
                WidthRequest="128"/>
             
        </VerticalStackLayout>

    <VerticalStackLayout>
            <Button
                Text="About"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NavigateToAboutUsPageCommand}"/>                
        
            <Button
                Text="Games"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NavigateToNewReelPageCommand}"/>              
            
            <Button
                Text="Media"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NavigateToNewReelPageCommand}"/>              
            
            <Button
                Text="Goals"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NavigateToGoalsPageCommand}"/>                
        
            <Button
                Text="Funding"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NavigateToFundingPageCommand}"/>                
            
            <Button
                Text="News"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NavigateToNewReelPageCommand}"/>           
            
            <Button
                Text="Lottery"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NavigateToLotteryPageCommand}"/>

    </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
